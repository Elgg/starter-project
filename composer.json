{
	"type": "project",
	"name": "elgg/starter-project",
	"description": "This is a quickstart skeleton for building a site based on Elgg 3.x.",
	"license": "MIT",
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require": {
		"elgg/elgg": "3.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~6.4"
	},
    "autoload-dev": {
        "psr-0": {
            "": [
                "./vendor/elgg/elgg/engine/tests/classes/",
                "./vendor/elgg/elgg/engine/tests/phpunit/unit/",
                "./vendor/elgg/elgg/engine/tests/phpunit/integration/",
                "./vendor/elgg/elgg/engine/tests/simpletest/"
            ]
        }
    },
	"scripts": {
		"post-install-cmd": "\\Elgg\\Composer\\PostInstall::execute",
		"post-package-update": "\\Elgg\\Composer\\PostUpdate::execute",
		"test": "phpunit"
	},
	"config": {
		"process-timeout": 0,
		"platform": {
			"php": "7.0"
		}
	}
}
